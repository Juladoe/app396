<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.edusoho.kuozhi.v3.view.EduSohoIconView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:privateImeOptions="15dp"
            android:text="@string/font_wrong"
            android:textColor="#71777D"
            android:textSize="@dimen/medium_font_size" />

        <LinearLayout
            android:id="@+id/input_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_back"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txt_login"
                android:textColor="#2B333B"
                android:textSize="@dimen/large_font_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/btn_loading_padding"
                android:paddingRight="@dimen/btn_loading_padding">

                <EditText
                    android:id="@+id/et_username"
                    style="@style/edittext_style"
                    android:layout_centerVertical="false"
                    android:layout_marginTop="45dp"
                    android:hint="@string/reg_username_hint"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/x_medium_font_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_username"
                    android:layout_marginTop="10dp"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/btn_loading_padding"
                android:paddingRight="@dimen/btn_loading_padding">

                <EditText
                    android:id="@+id/et_password"
                    style="@style/edittext_style"
                    android:layout_centerVertical="false"
                    android:layout_marginTop="15dp"
                    android:hint="@string/reg_password_hint"
                    android:paddingBottom="5dp"
                    android:inputType="textPassword"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/x_medium_font_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_password"
                    android:layout_marginTop="10dp"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                app:init_background="@drawable/login_btn_normal"
                app:init_text="@string/login"
                app:loading_background="@drawable/login_btn_press"
                app:loading_text="@string/login_loading"
                app:success_text="@string/login_success" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/line_center"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#D8D8D8" />

                <TextView
                    android:id="@+id/txt_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/line_center"
                    android:text="@string/login_forget_password"
                    android:textColor="#BDC2C6"
                    android:textSize="@dimen/_x_small_font_size" />

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/line_center"
                    android:text="@string/login_register2"
                    android:textColor="#03C777"
                    android:textSize="@dimen/_x_small_font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/txt_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/txt_three"
                    android:textColor="#BDC2C6"
                    android:textSize="@dimen/_x_small_font_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/txt_three"
                    android:background="#D8D8D8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/txt_three"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp">

                <ImageView
                    android:id="@+id/iv_qq"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/iv_weibo"
                    android:scaleType="fitXY"
                    android:src="@drawable/qq"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="70dp"
                    android:layout_toLeftOf="@+id/iv_weibo"
                    android:scaleType="fitXY"
                    android:src="@drawable/weixin"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_netclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/netclass"
                android:textSize="@dimen/_x_small_font_size"
                android:layout_gravity="center_horizontal"
                android:textColor="#BDC2C6"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
