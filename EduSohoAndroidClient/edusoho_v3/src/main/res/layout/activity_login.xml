<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/input_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
            android:background="@drawable/login_edittext_bg"
            android:padding="@dimen/btn_loading_padding">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/iv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/font_login_username"
                android:textColor="@color/grey_main"
                android:textSize="@dimen/x_large_font_size" />

            <EditText
                android:id="@+id/et_username"
                style="@style/edittext_style"
                android:layout_alignBaseline="@+id/iv_username"
                android:layout_toEndOf="@+id/iv_username"
                android:layout_toRightOf="@+id/iv_username"
                android:hint="@string/login_username_hint" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
            android:background="@drawable/login_edittext_bg"
            android:padding="@dimen/btn_loading_padding">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/font_login_password"
                android:textColor="@color/grey_main"
                android:textSize="@dimen/x_large_font_size" />

            <EditText
                android:id="@+id/et_password"
                style="@style/edittext_style"
                android:layout_alignBaseline="@+id/iv_password"
                android:layout_toEndOf="@+id/iv_password"
                android:layout_toRightOf="@+id/iv_password"
                android:gravity="center_vertical"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword" />
        </RelativeLayout>

        <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
            app:init_background="@drawable/login_btn_normal"
            app:init_text="@string/login"
            app:loading_background="@drawable/login_btn_press"
            app:loading_text="@string/login_loading"
            app:success_text="@string/login_success" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp">

            <ImageView
                android:layout_width="2px"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_line_text"
                android:src="@drawable/login_line_bg" />

            <TextView
                android:id="@+id/tv_line_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/login_line_text"
                android:textColor="@color/base_black_54"
                android:textSize="@dimen/small_font_size" />

            <ImageView
                android:layout_width="2px"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_line_text"
                android:src="@drawable/login_line_bg" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/qq"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/weibo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/weixin"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="@string/login_more"
        android:textColor="@drawable/login_more_bg"
        android:textSize="@dimen/medium_font_size" />

</RelativeLayout>
