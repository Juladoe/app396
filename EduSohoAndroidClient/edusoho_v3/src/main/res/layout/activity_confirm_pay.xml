<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mine_view_hint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:background="@color/disabled2_hint_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_register_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/iv_register"
            android:layout_height="@dimen/iv_register"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/action_icon_back" />

        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_centerInParent="true"
            android:text="@string/confirm_pay_month"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_get_code"
        android:layout_below="@id/rl_actionbar"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:background="@color/disabled2_hint_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/tv_vop_price"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="￥10"
                android:textSize="@dimen/font_l"
                android:textColor="@color/secondary_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_vip_name"
                android:layout_centerVertical="true"
                android:text="咪咕好知悦读会员"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_marginTop="56dp"
            android:background="@color/mine_view_hint"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_below="@id/line"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:text="时长"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_vip_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="x1月"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_get_code"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/disabled2_hint_color"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:text="移动话费支付"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_l"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_mobile_pay"
            android:background="@drawable/set_mobile_pay"
            android:button="@null"
            android:checked="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_color"
        android:text="@string/confirm_pay"
        android:textColor="@color/disabled2_hint_color"
        android:textSize="@dimen/font_xl"
        android:layout_width="match_parent"
        android:layout_height="49dp" />

</RelativeLayout>