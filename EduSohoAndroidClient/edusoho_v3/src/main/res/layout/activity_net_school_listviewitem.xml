<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:gravity="center_horizontal"
    android:padding="8dp">


    <TextView
        android:id="@+id/net_school_lable"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <Button
        android:id="@+id/enter_btn"
        android:layout_width="43dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/netschool_enter_btn"
        android:gravity="center"
        android:text="进入"
        android:textColor="#46C37B"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/enter_btn"
        android:layout_toRightOf="@id/net_school_lable"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/net_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="#000000"
            android:textSize="16dp" />

        <!--<TextView-->
        <!--android:id="@+id/login_address"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->


        <TextView
            android:id="@+id/login_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="#666666"
            android:textSize="12dp" />
    </LinearLayout>


</RelativeLayout>