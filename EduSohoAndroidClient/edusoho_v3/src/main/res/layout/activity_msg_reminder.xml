<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMsgNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:padding="12dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/setting_new_msg_notify"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_font_size" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:button="@null"
            android:layout_marginRight="12dp"
            android:background="@drawable/set_check_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:alpha="0.87"
            android:padding="12dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/msg_reminder_sound"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_font_size" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:button="@null"
            android:layout_marginRight="12dp"
            android:background="@drawable/set_check_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvViberate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:alpha="0.87"
            android:padding="12dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/msg_reminder_viberate"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_font_size" />

        <CheckBox
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_weight="0"
            android:button="@null"
            android:layout_marginRight="12dp"
            android:background="@android:color/holo_red_dark" />
    </LinearLayout>


</LinearLayout>