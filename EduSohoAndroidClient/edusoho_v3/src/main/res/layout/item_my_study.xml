<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/layout_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_pic"
            android:layout_alignTop="@+id/iv_pic"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_live_background"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            >

            <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
                android:id="@+id/tv_live_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/catalog_lesson_live"
                android:textColor="@color/disabled2_hint_color"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播中"
                android:textColor="@color/disabled2_hint_color"
                android:textSize="@dimen/font_xxs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="73dp"
            android:layout_alignTop="@+id/iv_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_l" />

            <TextView
                android:id="@+id/tv_study_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/secondary_font_color"
                android:textSize="@dimen/font_xs" />
        </LinearLayout>

        <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_pic"
            android:layout_marginRight="25dp"
            android:text="@string/new_font_more_oper"
            android:textColor="@color/secondary2_font_color"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/layout_class"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginRight="15dp"
            android:visibility="visible"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/disabled_hint_color"
                />

            <TextView
                android:id="@+id/tv_class_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary2_color"
                android:textSize="@dimen/font_s"
                android:layout_marginTop="15dp"
                android:text="来自班级 | "
                />

            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_font_color"
                android:textSize="@dimen/font_xs"
                android:layout_toRightOf="@+id/tv_class_txt1"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/tv_class_txt1"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

</LinearLayout>