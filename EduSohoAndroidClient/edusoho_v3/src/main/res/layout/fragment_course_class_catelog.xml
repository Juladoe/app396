<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/catelog_margin_left"
    android:layout_marginRight="@dimen/common_margin_right">

    <RelativeLayout
        android:id="@+id/rl_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_height"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_space"
            android:text="可用空间: 65.6G"
            android:textSize="@dimen/font_s"
            android:textColor="@color/secondary_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_course"
            android:text="缓存课程"
            android:textSize="@dimen/font_s"
            android:textColor="@color/primary"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/clear_content"
            android:layout_toLeftOf="@id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin" />
    </RelativeLayout>
    
    

</LinearLayout>