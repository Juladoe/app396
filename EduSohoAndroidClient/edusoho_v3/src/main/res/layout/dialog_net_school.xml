<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_bg_f5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#03C777">

        <com.edusoho.kuozhi.v3.view.EdusohoAutoCompleteTextView
            android:id="@+id/school_url_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/net_school_cancel_search_btn"
            android:background="@drawable/search_netschool_bg"
            android:drawableLeft="@drawable/icon_search_light"
            android:drawablePadding="11dp"
            android:hint="@string/txt_search"
            android:textColorHint="#D8D8D8"
            android:imeOptions="actionSearch"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="#CCCCCC"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/net_school_cancel_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="14dp"
            android:paddingLeft="10dp"
            android:includeFontPadding="false"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>


