<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:scaleType="fitXY"
            android:src="@drawable/back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info"
        android:textSize="@dimen/base_x_large_size"
        android:text="账号注册"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#2b333b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_show"
        android:textSize="@dimen/base_large_size"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textColor="#bdc2c6"
        android:layout_height="wrap_content"
        android:text="验证码已经发送到:"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:hint="请输入短信验证码"
            android:gravity="center_vertical"
            android:textSize="@dimen/base_large_size"
            android:textColorHint="#bdc2d6"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:text="60S"/>

        <View
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:hint="请设置密码"
            android:gravity="center_vertical"
            android:textSize="@dimen/base_large_size"
            android:textColorHint="#bdc2d6"
            android:inputType="textPassword"
            android:maxLength="20"/>

        <Button
            android:id="@+id/btn_show"
            android:layout_width="21dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pwd_unshow"/>

        <View
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>

    <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        app:init_background="@drawable/login_btn_normal"
        app:init_text="@string/register_confirm"
        app:loading_background="@drawable/login_btn_press"
        app:loading_text="@string/register_loading"
        app:success_text="@string/register_success"/>
</LinearLayout>
