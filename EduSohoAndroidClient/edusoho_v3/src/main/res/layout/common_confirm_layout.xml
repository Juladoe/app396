<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_register_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/view_register_margin"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/iv_register_width"
            android:layout_height="@dimen/iv_register_height"
            android:scaleType="fitXY"
            android:src="@drawable/back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info"
        android:textSize="@dimen/base_x_large_size"
        android:text="账号注册"
        android:layout_marginTop="@dimen/view_register_margin"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/register_send_auth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_loading_margin" />

    <TextView
        android:id="@+id/tv_show"
        android:textSize="@dimen/base_large_size"
        android:layout_marginTop="@dimen/btn_loading_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textColor="@color/register_tv_show"
        android:layout_height="wrap_content"
        android:text="验证码已经发送到:"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/rl_register_margin"
        android:layout_marginLeft="@dimen/view_register_margin"
        android:layout_marginRight="@dimen/view_register_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:hint="请输入短信验证码"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_register_size"
            android:textColorHint="@color/register_tv_show_hint"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:text="120S"/>

        <View
            android:background="@color/register_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_register_height"
            android:layout_marginTop="@dimen/view_marginTop"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/view_register_margin"
        android:layout_marginLeft="@dimen/view_register_margin"
        android:layout_marginTop="@dimen/btn_loading_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittext_style"
            android:hint="请设置密码"
            android:gravity="center_vertical"
            android:textSize="@dimen/base_large_size"
            android:textColorHint="@color/register_tv_show_hint"
            android:inputType="textPassword"
            android:maxLength="20"/>

        <Button
            android:id="@+id/btn_show"
            android:layout_width="@dimen/btn_register_width"
            android:layout_height="@dimen/btn_register_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pwd_unshow"/>

        <View
            android:background="@color/register_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_register_height"
            android:layout_marginTop="@dimen/view_marginTop"/>
    </RelativeLayout>

    <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_register_margin"
        android:layout_marginLeft="@dimen/view_register_margin"
        android:layout_marginTop="@dimen/rl_register_margin"
        app:init_background="@drawable/login_btn_normal"
        app:init_text="@string/register_confirm"
        app:loading_background="@drawable/login_btn_press"
        app:loading_text="@string/register_loading"
        app:success_text="@string/register_success"/>
</LinearLayout>
