<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_gray">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@color/white">

        <com.edusoho.kuozhi.v3.view.EduSohoRoundButton
            android:id="@+id/search_friend_btn"
            android:textColor="@color/gray"
            android:text="搜索昵称/手机/QQ号"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@null"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />

    <LinearLayout
        android:id="@+id/item_add_phone_friend"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/icon_add_phone_friend"
            android:src="@drawable/icon_add_phone"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_add_friend"
            android:text="添加手机联系人"
            android:textSize="18sp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:background="@color/material_grey"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/item_add_lesson_friend"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/icon_add_lesson_friend"
            android:src="@drawable/icon_add_lesson"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_add_lesson_friend"
            android:text="添加课程好友"
            android:textSize="18sp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:background="@color/material_grey"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_add_class_friend"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/icon_add_class_friend"
            android:src="@drawable/icon_add_class"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_add_class_friend"
            android:text="添加班级好友"
            android:textSize="18sp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:paddingLeft="8dp"
        android:text="服务号"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />

    <LinearLayout
        android:id="@+id/item_service_qiqiuyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_avatar"
            android:src="@drawable/icon_qiqiuyu"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:padding="6dp"
            android:id="@+id/friend_name"
            android:text="气球鱼学院"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:paddingLeft="8dp"
        android:text="好友"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />

</LinearLayout>