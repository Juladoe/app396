<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@color/base_gray">

        <TextView
            android:id="@+id/search_friend_btn"
            android:textColor="@color/gray"
            android:text="搜索昵称/手机/QQ号"
            android:drawableLeft="@drawable/icon_edittext_search"
            android:drawablePadding="8dp"
            android:paddingLeft="96dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/search_friend_bg"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/material_grey"
        />


</LinearLayout>