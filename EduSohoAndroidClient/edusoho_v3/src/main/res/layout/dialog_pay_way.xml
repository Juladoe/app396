<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_white_background"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="300dp"
    android:layout_height="196dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:text="@string/pay_way"
            android:gravity="center"
            android:textSize="@dimen/font_l"
            android:textColor="@color/primary_font_color"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
            android:id="@+id/dialog_dismiss"
            android:text="@string/new_font_close"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_l"
            android:textColor="@color/primary_font_color"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color"/>

    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54.5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:text="@string/zhifubao"
            android:layout_marginLeft="34dp"
            android:textSize="@dimen/font_s"
            android:textColor="@color/primary_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
            android:text="@string/new_font_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color"/>

    <RelativeLayout
        android:id="@+id/rl_vitural_coin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54.5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:text="@string/vitural_coin"
            android:layout_marginLeft="34dp"
            android:textSize="@dimen/font_s"
            android:textColor="@color/primary_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
            android:text="@string/new_font_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/disabled_hint_color"/>

</LinearLayout>