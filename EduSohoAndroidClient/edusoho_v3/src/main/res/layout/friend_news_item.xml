<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/new_follower_avatar"
        android:src="@drawable/default_avatar"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/news_content"
        android:textSize="14sp"
        android:text="内容"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/new_follower_avatar"
        android:layout_alignTop="@id/new_follower_avatar"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_time"
        android:textSize="10sp"
        android:text="2012年12月25日"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/new_follower_avatar"
        android:layout_below="@id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_below="@id/new_follower_avatar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/material_grey">

        </View>

</RelativeLayout>