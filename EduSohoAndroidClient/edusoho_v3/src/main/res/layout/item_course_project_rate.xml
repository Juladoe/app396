<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <com.edusoho.kuozhi.v3.view.circleImageView.CircularImageView
        android:id="@+id/civ_user_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar" />

    <RelativeLayout
        android:id="@+id/rl_rate_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/civ_user_avatar"
        android:layout_toRightOf="@+id/civ_user_avatar">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="曲先生"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_s" />

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_user_name"
            android:layout_alignParentLeft="true"
            android:isIndicator="true"
            android:progressTint="@color/secondary2_color"
            android:rating="4.0"
            android:scrollbarSize="5dp" />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_user_name"
            android:text="1小时前"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_xxs" />

        <TextView
            android:id="@+id/tv_from_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_post_time"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/tv_post_time"
            android:text="来自：学霸班"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_xxs" />
    </RelativeLayout>

