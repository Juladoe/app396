<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">

    <com.edusoho.kuozhi.clean.widget.ESIconView
        android:id="@+id/ev_task_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="@string/catalog_lesson_audio"
        android:textColor="@color/disabled_hint_color"
        android:textSize="@dimen/font_l" />

    <com.edusoho.kuozhi.clean.widget.ESIconView
        android:id="@+id/ev_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_task_lock"
        android:textColor="@color/secondary2_font_color"
        android:textSize="@dimen/font_xl" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s" />

    <TextView
        android:id="@+id/tv_task_is_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/font_xxs" />

    <TextView
        android:id="@+id/tv_task_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:20"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_s"
        android:visibility="gone" />

</LinearLayout>