<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <extensions.PagerSlidingTabStrip
        android:id="@+id/my_thread_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:pst_dividerPadding="4dp"
        app:dividerColor="@color/material_grey"
        app:indicatorHeight="1dp"
        app:pst_textSize="@dimen/small_font_size">

    </extensions.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/my_thread_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>