<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/tpye_divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/grey_bg"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/type_text"
        android:text="类型提示"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/material_grey"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/sample_avatar_1"
            android:id="@+id/add_friend_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:id="@+id/add_friend_name"
            android:text="伯牙"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/add_friend_image"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/add_friend_state"
            android:src="@drawable/add_friend_selector"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            />

        </RelativeLayout>


</LinearLayout>