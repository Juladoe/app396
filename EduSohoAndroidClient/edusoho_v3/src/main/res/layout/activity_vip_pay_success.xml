<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/pay_success"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="@string/pay_success_text"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_xxl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_list_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="恭喜获得:"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.edusoho.kuozhi.v3.view.ChildListView
        android:id="@+id/clv_coupon_list"
        android:layout_below="@id/tv_list_top"
        android:layout_marginTop="20dp"
        android:divider="@color/transparent"
        android:dividerHeight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@id/clv_coupon_list"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <Button
            android:id="@+id/btn_back_vip"
            android:background="@color/disabled_hint_color"
            android:text="@string/back_vip_text"
            android:textColor="@color/disabled2_hint_color"
            android:textSize="@dimen/font_l"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_check_pack"
            android:background="@color/primary_color"
            android:text="@string/check_my_pack_text"
            android:textColor="@color/disabled2_hint_color"
            android:textSize="@dimen/font_l"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_check_rules"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/help2"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:layout_width="13dp"
            android:layout_height="13dp" />
        <TextView
            android:id="@+id/tv_check_rules"
            android:text="查看包月退订说明"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/font_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
</RelativeLayout>