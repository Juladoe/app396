<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/audio_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/audio_play_cover_layout"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="240dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/audio_play_cover"
            android:scaleType="centerCrop"
            app:riv_border_width="10dp"
            app:riv_border_color="#333333"
            app:riv_corner_radius="100dp"
            android:layout_gravity="center"
            android:src="@drawable/default_course"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <ImageView
            android:alpha="0.8"
            android:layout_gravity="center"
            android:src="@drawable/audio_cover_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:id="@+id/audio_playbtn"
        android:src="@drawable/video_play"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_toRightOf="@id/audio_playbtn"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/lesson_video_time_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:layout_weight="0"
            android:id="@+id/audio_currentTime"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/video_seekbar"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:progress="2"
            android:layout_gravity="center"
            android:layout_height="16dp"
            android:maxHeight="3dp"
            android:id="@+id/audio_progress"
            android:thumb="@drawable/video_thum_sel"
            android:layout_width="match_parent"
            android:indeterminate="false" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/audio_totalTime"
            android:gravity="right|center_vertical"
            android:layout_weight="0"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
