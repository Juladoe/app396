<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        tools:text="16/12/12"
        android:textSize="@dimen/base_small_size"
        android:textColor="@color/base_black_35"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_nofity_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:padding="8dp"
        android:background="@drawable/notify_list_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            tools:text="通知"
            android:textColor="@color/base_black_87"
            android:textSize="@dimen/base_size"
            android:id="@+id/tv_nofity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <TextView
            tools:text="暂无内容"
            android:textColor="@color/base_black_54"
            android:textSize="@dimen/base_small_size"
            android:id="@+id/tv_nofity_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>