<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_voucher_bg"
        android:background="@drawable/vip_coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="78dp">
        <TextView
            android:id="@+id/tv_voucher_name"
            android:layout_centerInParent="true"
            android:text="K12抵用券"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_voucher_price"
                android:text="500"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/font_xxxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/tv_voucher_price"
                android:layout_marginLeft="5dp"
                android:text="元"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/font_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:background="@color/line"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="-2dp"
        android:layout_below="@id/rl_voucher_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/ll_use"
        android:layout_below="@id/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/disabled2_hint_color"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="39.5dp">

        <LinearLayout
            android:id="@+id/ll_use_desc"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.edusoho.kuozhi.v3.view.EduSohoNewIconView
                android:id="@+id/tv_desc_arrow"
                android:text="@string/new_font_unfold"
                android:textColor="@color/mine_coupon_color"
                android:textSize="@dimen/font_s_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/voucher_desc"
                android:textColor="@color/secondary_font_color"
                android:textSize="@dimen/font_s_"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_use_desc"
        android:layout_below="@id/ll_use"
        android:background="@color/disabled2_hint_color"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="15dp"
        android:paddingBottom="20dp"
        android:lineSpacingExtra="10dp"
        android:text="但是在Android里面，TextView往往都是具有一定的空间剩余的，比如你一个TextView是16dp的字体大小，那它一般的高度会达到18~20dp，字体越大，这个数字差别就会越大。"
        android:textColor="@color/secondary_font_color"
        android:textSize="@dimen/font_xs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>