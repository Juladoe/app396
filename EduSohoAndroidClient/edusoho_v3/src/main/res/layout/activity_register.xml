<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bottom_edge_height"
        android:src="@drawable/login_line_bg" />

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/login_tab_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            android:background="@drawable/login_edittext_bg"
                            android:paddingLeft="15dp">

                            <EditText
                                android:id="@+id/et_phone"
                                style="@style/edittext_style"
                                android:gravity="center_vertical"
                                android:hint="@string/reg_phone_hint"
                                android:maxLength="11" />

                            <Button
                                android:id="@+id/btn_send_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@color/green_alpha"
                                android:clickable="true"
                                android:paddingBottom="15dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="15dp"
                                android:text="@string/reg_send_code"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/medium_font_size" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            android:background="@drawable/login_edittext_bg"
                            android:padding="@dimen/btn_loading_padding">

                            <EditText
                                android:id="@+id/et_code"
                                style="@style/edittext_style"
                                android:gravity="center_vertical"
                                android:hint="@string/reg_code_hint" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            android:background="@drawable/login_edittext_bg"
                            android:padding="@dimen/btn_loading_padding">

                            <EditText
                                android:id="@+id/et_phone_pass"
                                style="@style/edittext_style"
                                android:gravity="center_vertical"
                                android:hint="@string/reg_password_hint"
                                android:inputType="textPassword" />
                        </RelativeLayout>

                        <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
                            android:id="@+id/btn_phone_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            app:init_background="@drawable/login_btn_normal"
                            app:init_text="@string/register"
                            app:loading_background="@drawable/login_btn_press"
                            app:loading_text="@string/register_loading"
                            app:success_text="@string/register_success" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/login_tab_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            android:background="@drawable/login_edittext_bg"
                            android:padding="@dimen/btn_loading_padding">

                            <EditText
                                android:id="@+id/et_mail"
                                style="@style/edittext_style"
                                android:gravity="center_vertical"
                                android:hint="@string/reg_mail_hint" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            android:background="@drawable/login_edittext_bg"
                            android:padding="@dimen/btn_loading_padding">

                            <EditText
                                android:id="@+id/et_mail_pass"
                                style="@style/edittext_style"
                                android:gravity="center_vertical"
                                android:hint="@string/reg_password_hint"
                                android:inputType="textPassword" />
                        </RelativeLayout>

                        <com.edusoho.kuozhi.v3.view.EduSohoLoadingButton
                            android:id="@+id/btn_mail_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_widget_margin_bottom"
                            app:init_background="@drawable/login_btn_normal"
                            app:init_text="@string/register"
                            app:loading_background="@drawable/login_btn_press"
                            app:loading_text="@string/register_loading"
                            app:success_text="@string/register_success" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>