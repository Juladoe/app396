<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ExpandableListView
        android:id="@+id/el_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/download_tools_layout"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:childDivider="@android:color/white"
        android:dividerHeight="0dp"
        android:groupIndicator="@null" />

    <LinearLayout
        android:id="@+id/download_tools_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/download_tool_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_all"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/select_all"
                android:textColor="@color/green_alpha"
                android:textSize="@dimen/medium_font_size" />

            <ImageView
                android:layout_width="2px"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/login_line_bg" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/green_alpha"
                android:textSize="@dimen/medium_font_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>