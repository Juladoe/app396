<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_course_news"
        android:divider="@null"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:clickable="false"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@+id/ll_bottom_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/study_entrance"
            android:textSize="@dimen/medium_font_size"
            android:clickable="true"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/base_black_87"
            android:background="@drawable/news_course_bottom_btn_bg"
            android:id="@+id/tv_study_entrance" />
    </LinearLayout>


</RelativeLayout>