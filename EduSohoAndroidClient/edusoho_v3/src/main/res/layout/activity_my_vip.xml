<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_view_hint"
    tools:context="com.edusoho.kuozhi.v3.ui.MyVipActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_vip_info"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:background="@color/disabled2_hint_color">

                <com.edusoho.kuozhi.v3.view.circleImageView.CircularImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_l" />

                <TextView
                    android:id="@+id/tv_avatar_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_name"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="10dp"
                    android:text="用户类型"
                    android:textColor="@color/secondary2_font_color"
                    android:textSize="@dimen/font_s" />

                <RelativeLayout
                    android:id="@+id/ll_voucher"
                    android:layout_alignParentRight="true"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="26dp"
                        android:text="@string/mine_coupon"
                        android:textColor="@color/mine_coupon_color"
                        android:textSize="@dimen/font_s" />
                    <LinearLayout
                        android:id="@+id/ll_coupon_num"
                        android:layout_above="@id/tv_coupon"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_voucher_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_color"
                            android:textSize="@dimen/font_xxl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="张"
                            android:textColor="@color/secondary_color"
                            android:textSize="@dimen/font_s" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="0.5dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ll_voucher"
                    android:background="@color/disabled_hint_color" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_coupon_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_vip_info"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/vip_gift_month"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_xl" />

            <com.edusoho.kuozhi.v3.view.ChildListView
                android:id="@+id/clv_voucher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_coupon_list_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:divider="@color/transparent"
                android:dividerHeight="26dp"
                android:scrollbars="none" />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_month_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/disabled2_hint_color"
            android:gravity="center"
            android:text="￥10/月"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_l" />

        <Button
            android:id="@+id/btn_opened"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:text="@string/vip_opened"
            android:textColor="@color/disabled2_hint_color"
            android:textSize="@dimen/font_l" />
    </LinearLayout>

</RelativeLayout>
