<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_view_hint"
    tools:context="com.edusoho.kuozhi.v3.ui.MyVipActivity">

    <RelativeLayout
        android:id="@+id/rl_vip_info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:background="@color/disabled2_hint_color">

        <com.edusoho.kuozhi.v3.view.circleImageView.CircularImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_l" />

        <TextView
            android:id="@+id/tv_avatar_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:text="用户类型"
            android:textColor="@color/secondary2_font_color"
            android:textSize="@dimen/font_s" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_avatar_type"
            android:layout_marginRight="26dp"
            android:text="@string/mine_coupon"
            android:textColor="@color/mine_coupon_color"
            android:textSize="@dimen/font_s" />

        <LinearLayout
            android:id="@+id/ll_coupon_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_coupon"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_coupon_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/font_xxl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="张"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/font_s" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@id/tv_coupon"
            android:background="@color/disabled_hint_color" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gift"
        android:layout_below="@id/rl_vip_info"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/vip_gift_month"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/tv_gift"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="118dp">

        <RelativeLayout
            android:background="@drawable/vip_coupon_bg"
            android:layout_width="match_parent"
            android:layout_height="78dp">
            <TextView
                android:id="@+id/tv_coupon_price"
                android:text="K12抵用券"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_s"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/mine_coupon_color"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:background="@color/disabled2_hint_color"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="39.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:id="@+id/tv_month_price"
            android:background="@color/disabled2_hint_color"
            android:text="￥10/月"
            android:textColor="@color/secondary_font_color"
            android:textSize="@dimen/font_l"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_opened"
            android:text="@string/vip_opened"
            android:textColor="@color/disabled2_hint_color"
            android:textSize="@dimen/font_l"
            android:background="@color/primary_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
