<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_gray"
        android:textColor="@color/grey"
        android:paddingLeft="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="A"
        />

    <RelativeLayout
        android:id="@+id/friend_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/friend_avatar"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/friend_name"
            android:text="好友姓名"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/medium_font_size"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/friend_avatar"
            android:layout_alignTop="@id/friend_avatar"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 教师标签-->
        <ImageView
            android:id="@+id/teacher_tag"
            android:src="@drawable/teacher_tag"
            android:layout_marginLeft="4dp"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/friend_name"
            android:layout_alignTop="@id/friend_name"
            />

        </RelativeLayout>


    <View
        android:id="@+id/divider_line"
        android:background="@color/material_grey"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>