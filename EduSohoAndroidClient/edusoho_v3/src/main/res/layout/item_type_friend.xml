<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/friend_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_avatar"
            android:src="@drawable/friend_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:layout_marginLeft="12dp"
            android:id="@+id/friend_name"
            android:text="好友姓名"
            android:textSize="16sp"
            android:layout_toRightOf="@id/friend_avatar"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 教师标签-->
        <ImageView
            android:id="@+id/teacher_tag"
            android:src="@drawable/teacher_tag"
            android:layout_marginLeft="12dp"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/friend_name"
            android:layout_centerVertical="true"/>


        </RelativeLayout>


    <View
        android:background="@color/material_grey"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>