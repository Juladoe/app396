<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/friend_item_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_bg"
        android:visibility="gone">

        <TextView
            android:text="好友"
            android:textSize="12sp"
            android:textColor="@color/grey_alpha"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/material_grey"
            />
        </LinearLayout>

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_cccccc"
        android:textColor="@color/grey"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="A"
        />

    <RelativeLayout
        android:id="@+id/friend_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/friend_avatar"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/friend_name"
            android:text="好友姓名"
            android:textSize="@dimen/medium_font_size"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/friend_avatar"
            android:layout_alignTop="@id/friend_avatar"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 教师标签-->
        <ImageView
            android:id="@+id/teacher_tag"
            android:src="@drawable/teacher_tag"
            android:layout_marginLeft="4dp"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/friend_name"
            android:layout_alignTop="@id/friend_name"
            />

        </RelativeLayout>


    <View
        android:id="@+id/divider_line"
        android:background="@color/material_grey"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>