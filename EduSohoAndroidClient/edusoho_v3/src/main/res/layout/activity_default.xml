<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edusoho.kuozhi.v3.ui.DefaultPageActivity">


    <com.edusoho.kuozhi.v3.view.EduToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/primary_color"
        android:visibility="gone"
        app:centerTitle="@string/toolbar_title"
        app:centerTitleColor="@android:color/white"
        app:centerTitleSize="@dimen/large_font_size"
        tools:layout="@layout/toolbar_custom" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bottom_layout"
        android:layout_below="@+id/toolbar"
        android:background="@color/system_normal_bg" />

    <include layout="@layout/nav_setting" />
</RelativeLayout>

