<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_cover"
                android:scaleType="centerCrop"
                android:src="@drawable/default_course"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_gravity="bottom"
                android:id="@+id/card_label_content"
                android:background="@drawable/find_card_item_image_label"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/card_title"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:text="课程名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/base_small_size"
                android:textColor="@color/primary"
                android:id="@+id/card_price"
                android:gravity="left"
                android:layout_weight="1"
                android:text="免费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableLeft="@drawable/find_card_item_num_icon"
                android:textColor="@color/base_black_35"
                android:textSize="@dimen/base_small_size"
                android:id="@+id/card_num"
                android:gravity="right"
                android:layout_weight="0"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>