<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_avatar"
            android:layout_width="@dimen/head_icon_large"
            android:layout_height="@dimen/head_icon_large"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar"
            app:riv_corner_radius="3dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_icon_large"
            android:layout_toRightOf="@+id/riv_avatar">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/v_divider"
                android:text="阔知网络"
                android:textSize="@dimen/medium_font_size" />

            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider"
                android:text="管理员"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_info"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableLeft="@drawable/drawer_selector_0"
            android:drawablePadding="15dp"
            android:paddingEnd="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:text="@string/drawer_items_learn"
            android:textColor="@drawable/drawer_selector_font"
            android:textSize="@dimen/large_font_size" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/radio0"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableLeft="@drawable/drawer_selector_1"
            android:drawablePadding="15dp"
            android:paddingEnd="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:text="@string/drawer_items_download"
            android:textColor="@drawable/drawer_selector_font"
            android:textSize="@dimen/large_font_size" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/radio1"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableLeft="@drawable/drawer_selector_2"
            android:drawablePadding="15dp"
            android:paddingEnd="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:text="@string/drawer_items_buy_vip"
            android:textColor="@drawable/drawer_selector_font"
            android:textSize="@dimen/large_font_size" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/radio2"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableLeft="@drawable/drawer_selector_3"
            android:drawablePadding="15dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:text="@string/drawer_items_collection"
            android:textColor="@drawable/drawer_selector_font"
            android:textSize="@dimen/large_font_size" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/radio3"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableLeft="@drawable/drawer_selector_5"
            android:drawablePadding="15dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:text="@string/drawer_items_setting"
            android:textColor="@drawable/drawer_selector_font"
            android:textSize="@dimen/large_font_size" />
    </RelativeLayout>

</LinearLayout>