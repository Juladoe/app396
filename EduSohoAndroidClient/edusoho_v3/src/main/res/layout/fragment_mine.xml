<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_item_bg"
        android:onClick="true"
        android:padding="16dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_avatar"
            android:layout_width="@dimen/head_icon_large"
            android:layout_height="@dimen/head_icon_large"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar"
            app:riv_corner_radius="3dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_icon_large"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/eiv_right_arrow0"
            android:layout_toRightOf="@+id/riv_avatar">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/v_divider"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider"
                android:textColor="@color/base_black_54"
                android:textSize="@dimen/medium_font_size" />
        </RelativeLayout>

        <com.edusoho.kuozhi.v3.view.EduSohoIconView
            android:id="@+id/eiv_right_arrow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/font_right_arrow"
            android:textColor="@color/grey_cccccc"
            android:textSize="@dimen/large_font_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_info"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_my_1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/my_item_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_my_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/red"
                android:padding="5dp"
                android:text="@string/font_my_study"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toLeftOf="@+id/eiv_right_arrow"
                android:layout_toRightOf="@+id/eiv_my_study"
                android:gravity="center_vertical"
                android:text="@string/mine_items_learn"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/v_separate_line_1"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/rl_my_1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_dddddd" />

        <RelativeLayout
            android:id="@+id/rl_my_2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/v_separate_line_1"
            android:background="@drawable/my_item_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_my_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/orange_alpha"
                android:padding="5dp"
                android:text="@string/font_my_download"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toLeftOf="@+id/eiv_right_arrow1"
                android:layout_toRightOf="@+id/eiv_my_download"
                android:gravity="center_vertical"
                android:text="@string/mine_items_download"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/v_separate_line_2"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/rl_my_2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_dddddd" />

        <RelativeLayout
            android:id="@+id/rl_my_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/v_separate_line_2"
            android:background="@drawable/my_item_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_my_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/green_alpha"
                android:padding="5dp"
                android:text="@string/font_my_vip"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toLeftOf="@+id/eiv_right_arrow2"
                android:layout_toRightOf="@+id/eiv_my_vip"
                android:gravity="center_vertical"
                android:text="@string/mine_items_buy_vip"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/v_separate_line_3"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/rl_my_3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_dddddd" />

        <RelativeLayout
            android:id="@+id/rl_my_4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/v_separate_line_3"
            android:background="@drawable/my_item_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_my_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/blue_alpha"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp"
                android:text="@string/font_my_collection"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toLeftOf="@+id/eiv_right_arrow3"
                android:layout_toRightOf="@+id/eiv_my_collection"
                android:gravity="center_vertical"
                android:text="@string/mine_items_collection"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/v_separate_line_4"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/rl_my_4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_dddddd" />

        <RelativeLayout
            android:id="@+id/rl_my_6"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/v_separate_line_4"
            android:background="@drawable/my_item_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_my_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/blue_alpha"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp"
                android:text="@string/font_my_question"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toLeftOf="@+id/eiv_right_arrow5"
                android:layout_toRightOf="@+id/eiv_my_question"
                android:gravity="center_vertical"
                android:text="@string/mine_items_question"
                android:textColor="@color/base_black_87"
                android:textSize="@dimen/medium_font_size" />

            <com.edusoho.kuozhi.v3.view.EduSohoIconView
                android:id="@+id/eiv_right_arrow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/font_right_arrow"
                android:textColor="@color/grey_cccccc"
                android:textSize="@dimen/large_font_size" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_item_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.edusoho.kuozhi.v3.view.EduSohoIconView
            android:id="@+id/eiv_my_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/blue_alpha"
            android:padding="5dp"
            android:text="@string/font_my_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/eiv_right_arrow4"
            android:layout_toRightOf="@+id/eiv_my_setting"
            android:gravity="center_vertical"
            android:text="@string/mine_items_setting"
            android:textColor="@color/base_black_87"
            android:textSize="@dimen/medium_font_size" />

        <com.edusoho.kuozhi.v3.view.EduSohoIconView
            android:id="@+id/eiv_right_arrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/font_right_arrow"
            android:textColor="@color/grey_cccccc"
            android:textSize="@dimen/large_font_size" />
    </RelativeLayout>
</LinearLayout>