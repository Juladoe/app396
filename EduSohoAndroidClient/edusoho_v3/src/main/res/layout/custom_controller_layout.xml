<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.v3.view.video.CustomMediaController xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_mediaController"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/lesson_vide_tools_layout"
        android:layout_alignParentBottom="true"
        android:background="#717171"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_prev"
            android:layout_margin="8dp"
            android:src="@drawable/video_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/custom_play"
            android:layout_margin="8dp"
            android:src="@drawable/icon_video_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/custom_next"
            android:layout_margin="8dp"
            android:src="@drawable/video_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/lesson_vide_tools_layout"
        android:background="#717171"
        android:id="@+id/lesson_video_time_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="left"
            android:layout_weight="1"
            android:id="@+id/custom_currentTime"
            android:padding="8dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/custom_totalTime"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/custom_rotation_btn"
        android:layout_below="@id/lesson_video_time_layout"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/video_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:progressDrawable="@drawable/video_seekbar"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:layout_marginBottom="-8dp"
        android:layout_above="@id/lesson_video_time_layout"
        android:progress="2"
        android:layout_height="12dp"
        android:maxHeight="6dp"
        android:id="@+id/custom_seekbar"
        android:thumb="@drawable/video_thum_sel"
        android:layout_width="match_parent" />

</com.edusoho.kuozhi.v3.view.video.CustomMediaController>
