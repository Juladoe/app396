<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EduSohoTextBtn">
        <attr name="text" format="string" />
        <attr name="image" format="string" />
        <attr name="size" format="dimension" />
        <attr name="fontColor" format="color" />
        <attr name="iconSizeScale" format="float" />
    </declare-styleable>

    <declare-styleable name="ESExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="EduSohoLoadingButton">
        <attr name="init_text" format="string" />
        <attr name="loading_text" format="string" />
        <attr name="success_text" format="string" />
        <attr name="init_background" format="integer" />
        <attr name="loading_background" format="integer" />
    </declare-styleable>

    <declare-styleable name="MuiltTextView">
        <attr name="muiltTitle" format="string" />
        <attr name="muiltColor" format="color" />
        <attr name="contentColor" format="color" />
        <attr name="isFirstPadding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FancyButtonsAttrs">
        <attr name="defaultColor" format="color" />
        <attr name="textStr" format="string" />

        <attr name="textColor" format="color" />

        <attr name="textFont" format="string" />
        <attr name="iconFont" format="string" />

        <attr name="textSize" format="dimension" />
        <attr name="iconResource" format="integer" />
        <attr name="fontIconResource" format="string" />
        <attr name="fontIconSize" format="dimension" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="focusColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>
</resources>