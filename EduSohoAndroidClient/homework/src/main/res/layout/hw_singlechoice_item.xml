<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.homework.view.test.SingleChoiceHomeworkQuestionWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="28dp"
    android:paddingBottom="28dp"
    android:paddingLeft="15dp"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_below="@id/homework_question_stem"
        android:id="@+id/homework_question_stem"
        android:textColor="@color/homework_stem"
        android:textSize="@dimen/question_stem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_below="@id/homework_question_stem"
        android:id="@+id/hw_quetion_choice_group"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/homework_question_content_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RadioGroup>

    <ViewStub
        android:layout="@layout/homework_question_analysis"
        android:layout_marginTop="20dp"
        android:layout_below="@id/quetion_choice_group"
        android:id="@+id/hw_quetion_choice_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.edusoho.kuozhi.homework.view.test.SingleChoiceHomeworkQuestionWidget>