<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.homework.view.test.DetermineHomeworkQuestionWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_normal_bg"
    android:paddingBottom="28dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:paddingTop="28dp">
    <include layout="@layout/homework_material_stem_include" />
    <TextView
        android:textColor="@color/homework_stem"
        android:layout_below="@id/homework_question_stem"
        android:id="@+id/homework_question_stem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homework_question_stem"
        android:layout_marginTop="@dimen/homework_question_content_top"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/hw_question_result_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/question_choice_error"
                android:gravity="center" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/question_choice_right"
                android:gravity="center" />
        </RadioGroup>

        <ViewStub
            android:id="@+id/hw_quetion_choice_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout="@layout/homework_question_analysis" />
    </LinearLayout>
</com.edusoho.kuozhi.homework.view.test.DetermineHomeworkQuestionWidget>
