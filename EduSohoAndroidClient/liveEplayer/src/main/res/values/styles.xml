        <item name="android:textSize">@dimen/title3_textsize</item>
        <item name="android:textColor">@color/text3_normal_color</item>
    </style>


    <style name="gridview_item_tv_style">
        <item name="android:textSize">@dimen/title3_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">@dimen/phone_seekbar_left_padding</item>
        <item name="android:paddingLeft">@dimen/phone_seekbar_left_padding</item>
        <item name="android:paddingRight">@dimen/phone_seekbar_left_padding</item>
    </style>

    <style name="MediaController_SeekBar_pad" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:thumb">@drawable/pad_scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">@dimen/pad_seekbar_left_padding</item>
        <item name="android:paddingLeft">@dimen/pad_seekbar_left_padding</item>
        <item name="android:paddingRight">@dimen/pad_seekbar_left_padding</item>
    </style>


    <style name="vote_small_button_desc_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title2_textsize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="vote_pad_small_button_desc_style"  parent="vote_small_button_desc_style">
        <item name="android:textColor">@color/eplayer_pad_title_bg</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">@dimen/vote_pad_button_margin</item>
        <item name="android:layout_marginTop">-10dp</item>
    </style>


