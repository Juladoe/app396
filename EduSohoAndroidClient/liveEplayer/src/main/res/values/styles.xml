<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="top_normal_style">
        <item name="android:textSize">@dimen/top_textsize</item>
        <item name="android:textColor">@color/top_normal_color</item>
    </style>
    <style name="title2_normal_style">
        <item name="android:textSize">@dimen/title2_textsize</item>
        <item name="android:textColor">@color/text2_normal_color</item>
    </style>



