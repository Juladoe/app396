<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShareDialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_window_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_window_exit</item>
    </style>
</resources>