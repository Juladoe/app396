<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/course_details_lesson_title_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/course_details_lesson_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.edusoho.kuozhi.view.ESTextView
            android:id="@+id/course_details_lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/base_black_normal"
            android:textSize="@dimen/course_details_lesson_item_title"
            app:es_alpha="0.54" />

        <com.edusoho.kuozhi.view.ESTextView
            android:id="@+id/course_details_lesson_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lesson_item_image"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_black_normal"
            android:textSize="@dimen/course_details_lesson_item_type"
            app:es_alpha="0.54" />
    </LinearLayout>

    <CheckBox

        android:layout_marginLeft="8dp"
        android:enabled="false"
        android:layout_weight="0"
        android:id="@+id/course_lesson_donwload_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:button="@drawable/lesson_download_checkbox_sel" />
</LinearLayout>
