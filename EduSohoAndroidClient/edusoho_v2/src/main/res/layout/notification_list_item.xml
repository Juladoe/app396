<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/course_list_bottom_bg"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.edusoho.kuozhi.view.EduSohoIconView
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:textColor="@color/notify_icon"
            android:textSize="@dimen/notify_icon"
            android:id="@+id/notification_icon"
            android:text="@string/font_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/notification_icon"
            android:id="@+id/notification_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_below="@id/notification_message"
            android:padding="5dp"
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>