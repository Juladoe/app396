<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_below="@id/edusoho_actionbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/input_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:id="@+id/regist_email_edt"
            android:layout_centerVertical="true"
            android:background="@drawable/login_edt_bg_sel"
            android:paddingLeft="16dp"
            android:textColorHint="@color/login_edt_hit"
            android:hint="输入常用邮箱地址"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:id="@+id/input_user_layout"
        android:layout_below="@id/input_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:focusable="true"
            android:textColorHint="@color/login_edt_hit"
            android:singleLine="true"
            android:id="@+id/regist_user_edt"
            android:layout_centerVertical="true"
            android:background="@drawable/login_edt_bg_sel"
            android:paddingLeft="16dp"
            android:hint="昵称,中英文,最长14字符"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:id="@+id/input_pass_layout"
        android:layout_below="@id/input_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColorHint="@color/login_edt_hit"
            android:singleLine="true"
            android:id="@+id/regist_pass_edt"
            android:layout_centerVertical="true"
            android:background="@drawable/login_edt_bg_sel"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:hint="设置密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/input_pass2_layout"
        android:layout_below="@id/input_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColorHint="@color/login_edt_hit"
            android:singleLine="true"
            android:id="@+id/regist_pass2_edt"
            android:layout_centerVertical="true"
            android:background="@drawable/login_edt_bg_sel"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:hint="确认密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.edusoho.kuozhi.view.HtmlTextView
        android:textColor="@color/system_normal_text"
        android:layout_below="@id/input_pass2_layout"
        android:id="@+id/regist_info_lable"
        android:textSize="@dimen/regist_info_label"
        android:text="注册即表示您同意我们的{@color/regist_label_text 《服务协议》}"
        android:layout_width="wrap_content"
        android:layout_height="36dp" />

    <com.edusoho.kuozhi.ui.widget.ButtonWidget
        android:layout_marginTop="30dp"
        android:id="@+id/regist_btn"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textSize="@dimen/login_btn_text"
        android:textColor="@color/login_text"
        android:text="注  册"
        android:background="@drawable/login_btn_sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_info_lable" />

</RelativeLayout>
