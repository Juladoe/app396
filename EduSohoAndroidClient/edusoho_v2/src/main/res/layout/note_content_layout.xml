<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_content_background">

    <LinearLayout
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/note_lesson_entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="课时名称"
            android:id="@+id/note_lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_font_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/note_content_title"
            android:layout_alignParentLeft="true" />

        <com.edusoho.kuozhi.view.ESImageView
            app:es_alpha="0.54"
            android:layout_weight="0"
            android:src="@drawable/iconfont_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/small_font_size"
        android:textColor="@color/note_content"
        android:padding="16dp"
        android:background="@color/note_background"
        android:layout_below="@id/note_lesson_entrance" />

</RelativeLayout>