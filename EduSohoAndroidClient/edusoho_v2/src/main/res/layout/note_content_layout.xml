<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_content_background">

    <LinearLayout
        android:id="@+id/note_lesson_entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/note_content"
            android:id="@+id/note_lesson_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/note_content_item_bg"
            android:textSize="@dimen/middle_font_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/note_content_title"
            android:layout_weight="1"
            android:padding="16dp" />

        <ImageView
            android:src="@drawable/iconfont_youjiantou"
            android:id="@+id/lesson_entrance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/note_content_item_bg"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_weight="8" />

    </LinearLayout>

    <TextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/small_font_size"
        android:textColor="@color/note_content"
        android:padding="16dp"
        android:background="@color/note_background"
        android:text="这是笔记内容"
        android:layout_below="@id/note_lesson_entrance" />

    <WebView
        android:id="@+id/wvNoteContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></WebView>
</RelativeLayout>