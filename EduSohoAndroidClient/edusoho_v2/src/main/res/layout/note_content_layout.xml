<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_content_background">

    <RelativeLayout
        android:id="@+id/note_lesson_entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="课时名称"
            android:id="@+id/note_lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_font_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/note_content_title"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp" />

        <ImageView
            android:src="@drawable/iconfont_right_arrow"
            android:id="@+id/iv_lesson_entrance"
            android:layout_width="@dimen/lesson_entry_right_arrow"
            android:layout_height="@dimen/lesson_entry_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/small_font_size"
        android:textColor="@color/note_content"
        android:padding="16dp"
        android:background="@color/note_background"
        android:text="这是笔记内容"
        android:layout_below="@id/note_lesson_entrance" />

</RelativeLayout>