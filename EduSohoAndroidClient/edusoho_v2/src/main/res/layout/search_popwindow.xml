<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_color_normal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/found_search_layout"
            android:background="@drawable/found_search_layout"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:alpha="0.26"
                android:layout_weight="0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/base_black_normal"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/found_search_text_icon"
                android:text="@string/font_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:alpha="0.54"
                android:layout_weight="1"
                android:imeOptions="actionSearch"
                android:id="@+id/search_popwindow_edt"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@null"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="@dimen/found_search_text"
                android:textColor="@color/base_black_normal"
                android:hint="搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:alpha="0.26"
                android:visibility="gone"
                android:layout_weight="0"
                android:id="@+id/search_clear_btn"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/found_search_text_icon"
                android:text="@string/font_search_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:textColor="@color/search_cancel_btn_sel"
            android:id="@+id/search_popwindow_cancel_btn"
            android:clickable="true"
            android:textSize="@dimen/search_popwindow_cancel_btn"
            android:text="取消"
            android:layout_width="66dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_tags"
        android:background="@color/note_list_item_bg_pressed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门标签"
            android:textSize="@dimen/middle_font_size"
            android:textColor="@color/nav_btn_pressed"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/tv_hot_tag"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_hot_tag"
            android:id="@+id/tv_interval_line"
            android:background="@color/lesson_redirect_disabled" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_interval_line">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_tags">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<com.edusoho.kuozhi.view.ESTextView-->
                <!--android:layout_width="160px"-->
                <!--android:layout_height="74px"-->
                <!--android:background="@drawable/search_tag_btn_bg"-->
                <!--android:text="香蕉"-->
                <!--android:id="@+id/tv_text"-->
                <!--android:tag="1"-->
                <!--android:textColor="@android:color/black"-->
                <!--app:es_alpha="0.87"-->
                <!--android:textSize="@dimen/middle_font_size"-->
                <!--android:layout_margin="12dp" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>
