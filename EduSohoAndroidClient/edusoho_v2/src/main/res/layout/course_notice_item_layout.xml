<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_notice_item"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:id="@+id/course_notice_image"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:ellipsize="end"
        android:layout_toLeftOf="@id/course_notice_image"
        android:layout_marginRight="6dp"
        android:id="@+id/course_notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/course_notice_content"
        android:textSize="@dimen/course_notice_content"
        android:lines="2"/>

    <TextView
        android:layout_below="@id/course_notice_content"
        android:id="@+id/course_notice_issue_time"
        android:text="一天前"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/course_notice_issue_time"
        android:textColor="@color/course_notice_issue_time" />
</RelativeLayout>