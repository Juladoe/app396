<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/question_item_bg">

    <com.edusoho.kuozhi.view.plugin.CircularImageView
        android:id="@+id/civ_reply_pic"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="8dp"
        android:layout_gravity="left|top"
        android:scaleType="fitXY"
        android:src="@drawable/myinfo_default_face" />
    <!--<ImageView-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="48dp"-->
    <!--android:layout_weight="5"-->
    <!--android:src="@drawable/question_item_bg" />-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_thread_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_thread_post_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_thread_title"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:textSize="@dimen/base_small_size"
            android:textColor="@color/teacher_reply" />

        <TextView
            android:textSize="@dimen/base_small_size"
            android:id="@+id/tv_thread_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_thread_post_name"
            android:layout_margin="3dp"
            android:textColor="@color/question_lesson" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question_reply40"
            android:scaleType="fitXY"
            android:layout_below="@+id/tv_thread_post_name"
            android:layout_toLeftOf="@+id/tv_msgs" />

        <TextView
            android:id="@+id/tv_msgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_thread_post_name"
            android:layout_toLeftOf="@+id/tv_thread_post_time"
            android:layout_margin="5dp"
            android:textColor="@color/question_lesson" />


    </RelativeLayout>

</LinearLayout>