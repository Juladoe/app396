<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:id="@+id/course_details_lesson_chapter"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/system_light_text"
        android:textSize="@dimen/course_details_lesson_item_chapter"
        android:text="第一章"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:visibility="gone"
        android:paddingLeft="40dp"
        android:id="@+id/course_details_lesson_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/course_details_lesson_title_layout"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@drawable/course_details_lesson_title_bg"
            android:paddingLeft="24dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_details_lesson_title"
                android:singleLine="true"
                android:textColor="@color/system_normal_text"
                android:textSize="@dimen/course_details_lesson_item_title"
                android:text="课时标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/lesson_item_image"
                android:id="@+id/course_details_lesson_type"
                android:singleLine="true"
                android:textColor="@color/system_normal_text"
                android:textSize="@dimen/course_details_lesson_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/course_details_lesson_progress"
            android:src="@drawable/learn_status_normal"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </FrameLayout>
</LinearLayout>
