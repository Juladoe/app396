<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.edusoho.kuozhi.view.ESTextView
        android:id="@+id/course_details_lesson_chapter"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingLeft="32dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:textColor="@color/base_black_normal"
        android:textSize="@dimen/course_details_lesson_item_chapter"
        android:visibility="gone"
        app:es_alpha="0.87" />

    <RelativeLayout
        android:id="@+id/course_details_lesson_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:visibility="visible"
        android:background="@drawable/lesson_list_item_bg">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/course_details_lesson_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/lesson_list_item_bg"
            android:orientation="vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="24dp"
            android:paddingTop="7dp">

            <com.edusoho.kuozhi.view.ESTextView
                android:id="@+id/course_details_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/base_black_normal"
                android:textSize="@dimen/course_details_lesson_item_title"
                app:es_alpha="0.54" />

            <com.edusoho.kuozhi.view.ESTextView
                android:id="@+id/course_details_lesson_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lesson_item_image"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/base_black_normal"
                android:textSize="@dimen/course_details_lesson_item_type"
                app:es_alpha="0.54" />
        </LinearLayout>

        <ImageView
            android:id="@+id/course_details_lesson_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/learn_status_normal" />

        <TextView
            android:layout_margin="7dp"
            android:layout_alignBottom="@id/course_details_lesson_title_layout"
            android:background="@drawable/blue_card_bg"
            android:text="已缓存"
            android:textSize="@dimen/base_x_small_size"
            android:textColor="@color/base_white_normal"
            android:id="@+id/course_lesson_donwload_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
