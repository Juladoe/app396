<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/question_item_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/message_head_icon"
        android:layout_height="@dimen/message_head_icon"
        android:layout_margin="16dp">

        <com.edusoho.kuozhi.view.plugin.CircularImageView
            android:id="@+id/ci_send_pic"
            android:layout_width="@dimen/message_head_icon"
            android:layout_height="@dimen/message_head_icon"
            android:scaleType="fitXY"
            android:layout_margin="1dp"
            android:src="@drawable/myinfo_default_face" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_unread_msg"
            android:src="@drawable/update_bg"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:alpha="0.87"
                android:id="@+id/tv_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:text="Jesse"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:alpha="0.54"
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_send_name"
                android:layout_alignParentRight="true"
                android:text="18:00"
                android:textColor="#000000"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:alpha="0.54"
                android:id="@+id/tv_send_content"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:text="This is a private letter!"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>