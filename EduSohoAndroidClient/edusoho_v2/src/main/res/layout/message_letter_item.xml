<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/question_item_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/head_icon_40"
        android:layout_height="@dimen/head_icon_40"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <com.edusoho.kuozhi.view.plugin.CircularImageView
            android:id="@+id/ci_send_pic"
            android:layout_width="@dimen/head_icon_40"
            android:layout_height="@dimen/head_icon_40"
            android:scaleType="fitXY"
            android:src="@drawable/myinfo_default_face" />

        <!--<ImageView-->
        <!--android:layout_width="11dp"-->
        <!--android:layout_height="11dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/iv_unread_msg"-->
        <!--android:src="@drawable/update_bg"-->
        <!--android:scaleType="fitXY" />-->

        <TextView
            android:id="@+id/tv_msg_sum"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/xxx_small_font_size"
            android:textColor="@android:color/white"
            android:background="@drawable/new_msg_logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:alpha="0.87"
                android:id="@+id/tv_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:text="Jesse"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.edusoho.kuozhi.view.ESTextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_send_name"
                android:layout_alignParentRight="true"
                android:text="18:00"
                app:es_alpha="0.26"
                android:textColor="@color/base_black_normal"
                android:textSize="@dimen/x_small_font_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:alpha="0.54"
                android:id="@+id/tv_send_content"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dp"
                android:text="This is a private letter!"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>