<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/notemain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.edusoho.kuozhi.ui.widget.RefreshGridViewWidget
        android:id="@+id/note_gridview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/note_main_background"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:paddingTop="@dimen/note_main_padding_top"
        android:paddingRight="@dimen/note_main_padding_right"
        android:paddingLeft="@dimen/note_main_padding_right" />

    <include layout="@layout/loading_layout" />
</RelativeLayout>


