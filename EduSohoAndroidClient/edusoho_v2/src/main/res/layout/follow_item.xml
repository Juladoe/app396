<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.edusoho.kuozhi.view.plugin.CircularImageView
        android:id="@+id/ci_follow_pic"
        android:layout_width="@dimen/message_head_icon"
        android:layout_height="@dimen/message_head_icon"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/myinfo_default_face" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_font_size"
        android:layout_gravity="center"
        android:id="@+id/tv_username"
        android:text="Jesse"
        android:textColor="@color/base_color_normal" />

</LinearLayout>