<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/app_plugin_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/app_plugin_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:padding="2dp"
        android:maxLength="5"
        android:textColor="@color/base_white_normal"
        android:background="@drawable/red_card_bg"
        android:layout_alignRight="@id/app_plugin_icon"
        android:layout_alignBottom="@id/app_plugin_icon"
        android:text="官方"
        android:textSize="@dimen/base_x_small_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_plugin_icon"
        android:orientation="horizontal">

        <com.edusoho.kuozhi.view.ESTextView
            android:id="@+id/app_plugin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="应用名"
            android:textSize="@dimen/base_large_size"
            app:es_alpha="0.87" />

        <com.edusoho.kuozhi.view.ESTextView
            android:layout_marginLeft="8dp"
            android:id="@+id/app_plugin_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1.0.0"
            android:textSize="@dimen/base_size"
            app:es_alpha="0.54" />
    </LinearLayout>

    <com.edusoho.kuozhi.view.ESTextView
        android:layout_marginBottom="4dp"
        android:id="@+id/app_plugin_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/app_plugin_icon"
        android:layout_toRightOf="@id/app_plugin_icon"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="2"
        android:text="应用说明"
        android:textSize="@dimen/base_size"
        app:es_alpha="0.54" />
</RelativeLayout>
