<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/system_bg"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

        <TextView
            android:gravity="center_vertical"
            android:padding="6dp"
            android:textSize="@dimen/qr_layout_label_text"
            android:textColor="@color/qr_logo_text"
            android:background="@color/qr_layout_label"
            android:text="其他方式进入"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.edusoho.kuozhi.view.EdusohoAutoCompleteTextView
            android:singleLine="true"
            android:layout_margin="24dp"
            android:id="@+id/school_url_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="输入网校域名 例如(www.name.com)"
            android:textColorHint="@color/qr_school_url_input_text"
            android:textColor="@color/qr_school_url_input_text"
            android:background="@drawable/login_edt_bg_sel"
            android:clickable="true"
            android:textSize="@dimen/normal_btn" />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:id="@+id/normal_search_btn"
            android:padding="10dp"
            android:textSize="@dimen/base_x_large_size"
            android:textColor="@color/qr_school_url_btn_text"
            android:text="搜索"
            android:background="@drawable/qr_shcool_url_btn_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qr_logo_layout" />

</LinearLayout>