<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_normal_bg">

    <com.edusoho.kuozhi.ui.widget.RefreshListWidget
        app:rlw_dividerHeight="1px"
        android:scrollbars="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        android:id="@+id/found_category_course_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.edusoho.kuozhi.ui.widget.CategoryListView
        android:id="@+id/found_category_list"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/white"
        android:dividerHeight="1px"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:scrollbars="none" />
</RelativeLayout>