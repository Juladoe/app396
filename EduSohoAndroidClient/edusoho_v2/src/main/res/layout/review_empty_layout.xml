<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.edusoho.kuozhi.view.ESImageView
        app:es_alpha="0.54"
        android:id="@+id/list_empty_icon"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_nocommit"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.edusoho.kuozhi.view.ESTextView
        app:es_alpha="0.54"
        android:layout_marginTop="18dp"
        android:textSize="@dimen/base_size"
        android:layout_centerVertical="true"
        android:id="@+id/list_empty_text"
        android:padding="5dp"
        android:text="@string/course_no_review"
        android:textColor="@color/base_black_normal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.edusoho.kuozhi.view.ESTextView
        android:id="@+id/course_review_btn"
        app:es_alpha="0.87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/course_review_edit_icon"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="去评价"
        android:textColor="@color/base_color_normal" />
</LinearLayout>
