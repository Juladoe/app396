<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.edusoho.kuozhi.view.ESTextView
            app:es_alpha="0.54"
            android:id="@+id/tv_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="9-4 18:45"
            android:background="@drawable/letter_time_bg"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_send_time"
            android:gravity="right|center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.edusoho.kuozhi.view.plugin.CircularImageView
                android:id="@+id/ci_send_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/myinfo_default_face" />

            <com.edusoho.kuozhi.view.ESTextView
                app:es_alpha="0.87"
                android:id="@+id/tv_send_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ci_send_pic"
                android:background="@drawable/box_blue"
                android:gravity="left|center_vertical"
                android:layout_centerInParent="true"
                android:maxWidth="250dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/base_black_normal"
                android:textSize="@dimen/middle_font_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>