<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.edusoho.kuozhi.view.ESTextView
        android:id="@+id/download_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/base_black_normal"
        android:gravity="center"
        android:textColor="@color/base_white_normal"
        android:textSize="@dimen/base_size"
        app:es_alpha="0.54" />

    <com.edusoho.kuozhi.ui.widget.EduSohoListView
        android:id="@id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/download_device_info" />
</RelativeLayout>
