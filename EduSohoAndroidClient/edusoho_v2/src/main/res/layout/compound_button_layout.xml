<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kuozhi.view.plugin.EduSohoCompoundButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ec_btn"
    android:visibility="gone"
    android:checkedButton="@+id/btn_video">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_video"
        android:text="点播"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:button="@null"
        android:background="@drawable/found_video_btn"
        android:gravity="center" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_live"
        android:text="直播"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:button="@null"
        android:background="@drawable/found_video_btn"
        android:gravity="center" />
</com.edusoho.kuozhi.view.plugin.EduSohoCompoundButton>