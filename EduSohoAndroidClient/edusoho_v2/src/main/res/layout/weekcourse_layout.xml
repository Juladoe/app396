<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:contentPadding="8dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/weekcourse_coursepic"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noram_course" />

            <TextView
                android:textColor="@color/system_light_text"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:id="@+id/weekcourse_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekcourse_coursepic"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:layout_alignLeft="@id/weekcourse_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekcourse_title"
                android:orientation="horizontal">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:text="dddd"
                    android:drawableLeft="@drawable/course_teacher_icon"
                    android:textColor="@color/system_gray_text"
                    android:textSize="12sp"
                    android:id="@+id/weekcourse_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:text="dddd"
                    android:drawableLeft="@drawable/course_student_icon"
                    android:textColor="@color/system_gray_text"
                    android:textSize="12sp"
                    android:id="@+id/weekcourse_studentnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:text="dddd"
                    android:drawableLeft="@drawable/course_price_icon"
                    android:textColor="@color/base_light"
                    android:id="@+id/weekcourse_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>