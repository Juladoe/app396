<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_centerVertical="true"
        android:id="@id/button_widget_btn"
        android:padding="14dp"
        android:textSize="@dimen/login_btn_text"
        android:textColor="@color/login_text"
        android:text="注  册"
        android:background="@drawable/login_btn_sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_alignRight="@id/button_widget_btn"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@id/button_widget_progress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:indeterminateDrawable="@drawable/load" />
</RelativeLayout>