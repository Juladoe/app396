<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/myinfo_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/myinfo_user_layout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="@drawable/normal_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <com.edusoho.kuozhi.view.plugin.CircularImageView
            android:layout_marginRight="30dp"
            android:scaleType="fitCenter"
            android:id="@+id/myinfo_logo"
            android:layout_centerVertical="true"
            android:src="@drawable/myinfo_default_face"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/myinfo_name"
            android:id="@+id/myinfo_name"
            android:layout_toRightOf="@id/myinfo_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="@dimen/myinfo_group"
            android:layout_below="@id/myinfo_name"
            android:id="@+id/myinfo_group"
            android:layout_toRightOf="@id/myinfo_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/myinfo_content"
            android:layout_alignBottom="@id/myinfo_logo"
            android:id="@+id/myinfo_content"
            android:layout_toRightOf="@id/myinfo_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/myinfo_status_layout"
            android:layout_toRightOf="@id/myinfo_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/user_loading_layout" />
        </FrameLayout>
    </RelativeLayout>

    <com.edusoho.kuozhi.ui.widget.LearnStatusWidget
        android:visibility="gone"
        android:id="@+id/myinfo_learnStatusWidget"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.edusoho.kuozhi.ui.widget.MyInfoPluginListView
        android:background="@color/system_bg"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/myinfo_plugin_list"
        android:layout_above="@id/myinfo_learnStatusWidget"
        android:layout_below="@id/myinfo_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
