<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/question_item_bg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#2ec368"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/question_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_title"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="14sp"/>

    <com.edusoho.kuozhi.view.ESTextView
        android:id="@+id/question_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/question_answer_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        app:es_alpha="0.54"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/question_answer_count_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/question_answer_count"
        android:layout_alignBottom="@id/question_answer_count"
        android:layout_marginLeft="6dp"
        android:src="@drawable/question_answer_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/question_answer_count"
        android:layout_alignLeft="@id/question_title"
        android:layout_toLeftOf="@id/question_answer_count_icon"
        android:orientation="horizontal">

        <com.edusoho.kuozhi.view.ESTextView
            android:id="@+id/question_course_title"
            android:layout_width="@dimen/question_course_title_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            app:es_alpha="0.54"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/question_super_small_font_size"/>

        <com.edusoho.kuozhi.view.ESTextView
            android:id="@+id/question_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:es_alpha="0.54"
            android:textSize="@dimen/question_super_small_font_size"/>

    </LinearLayout>

</RelativeLayout>