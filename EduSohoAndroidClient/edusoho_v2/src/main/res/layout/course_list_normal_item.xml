<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_window_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:id="@+id/course_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/course_list_bottom_bg">

        <include layout="@layout/course_main_item" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/course_list_bottom_bg"
            android:padding="10dp"
            android:layout_below="@+id/course_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/course_rating"
                style="@style/courseRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="2" />
            <TextView
                android:textColor="@color/course_price"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="免费" />
            <TextView
                android:textColor="@color/course_teacher"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/course_studentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>