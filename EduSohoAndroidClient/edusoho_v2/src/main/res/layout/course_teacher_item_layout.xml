<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/base_card_bg"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.edusoho.kuozhi.view.plugin.CircularImageView
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                android:id="@+id/teacher_face"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/myinfo_default_face" />

            <com.edusoho.kuozhi.view.ESTextView
                card_view:es_alpha="0.87"
                android:layout_alignTop="@id/teacher_face"
                android:layout_toRightOf="@id/teacher_face"
                android:id="@+id/teacher_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.edusoho.kuozhi.view.ESTextView
                card_view:es_alpha="0.54"
                android:layout_marginTop="8dp"
                android:layout_below="@id/teacher_nickname"
                android:layout_toRightOf="@id/teacher_face"
                android:id="@+id/teacher_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.edusoho.kuozhi.view.ESTextView
                card_view:es_alpha="0.87"
                android:layout_below="@id/teacher_face"
                android:id="@+id/teacher_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>