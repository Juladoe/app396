<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.edusoho.kuozhi.view.plugin.CircleImageView
        android:id="@+id/question_answer_head_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/question_answer_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/question_answer_head_image"
        android:layout_alignBottom="@id/question_answer_head_image"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joanie"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2014-12-16"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/question_answer_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/question_answer_head_image"
        android:src="#ccc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_answer_line"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="14sp"
        android:text="我是回复的内容我是回复的内容我是回复的内容
        我是回复的内容我是回复的内容我是回复的内容我是回复的内容
        我是回复的内容我是回复的内容我是回复的内容我是回复的内容"/>

</RelativeLayout>