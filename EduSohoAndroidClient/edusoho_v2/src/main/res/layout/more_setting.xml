<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_normal_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/more_setting_qrsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/more_setting_list_select"
        android:clickable="true"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:text="扫一扫"
        android:textColor="@color/system_light_text"
        android:textSize="@dimen/middle_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/more_setting_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_setting_list_select2"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:text="消息"
            android:textColor="@color/system_light_text"
            android:textSize="@dimen/middle_font_size" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/more_setting_line"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <com.edusoho.kuozhi.view.EduUpdateView
            android:id="@+id/more_setting_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_setting_list_select2"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:text="设置"
            android:textColor="@color/system_light_text"
            android:textSize="@dimen/middle_font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/more_setting_line"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/more_setting_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_setting_list_select2"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:text="离线观看"
            android:textColor="@color/system_light_text"
            android:textSize="@dimen/middle_font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/more_setting_line"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/more_setting_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_setting_list_select2"
            android:clickable="true"
            android:drawableRight="@drawable/more_setting_right"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:text="@string/school_about"
            android:textColor="@color/system_light_text"
            android:textSize="@dimen/middle_font_size" />
    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:id="@+id/more_setting_logout_btn"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/logout_btn_sel"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="退出登录"
        android:textColor="@color/login_text"
        android:textSize="@dimen/base_large_size"
        android:visibility="gone" />
</LinearLayout>