<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_layout"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:background="@color/system_window_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="8dp"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:button="@null"
            android:padding="5dp"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/audio_play_sel"
            android:id="@+id/audio_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_margin="5dp"
            android:id="@+id/audio_progress"
            android:layout_below="@id/audio_play_btn"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:progressDrawable="@drawable/course_learn_status_progress"
            android:thumb="@drawable/audio_thum_sel" />

        <TextView
            android:id="@+id/audio_play_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/audio_progress"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/audio_play_time"
            android:id="@+id/audio_total_time"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/audio_progress"
            android:text="/00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
