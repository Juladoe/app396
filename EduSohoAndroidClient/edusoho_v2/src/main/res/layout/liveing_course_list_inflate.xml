<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@drawable/question_item_bg">

    <ImageView
        android:layout_width="116dp"
        android:layout_height="71dp"
        android:scaleType="centerCrop"
        android:id="@+id/liveing_course_icon"
        android:src="@drawable/edusoho"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liveing_course_title"
        android:layout_toRightOf="@id/liveing_course_icon"
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:text="直播标题"
        android:textColor="@color/base_black_87"
        android:textSize="16sp"/>

    <com.edusoho.kuozhi.view.ESTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liveing_course_time"
        android:layout_alignLeft="@id/liveing_course_title"
        android:layout_below="@id/liveing_course_title"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:text="距离直播1-28开始还有1小时"
        android:textColor="@android:color/black"
        app:es_alpha="0.54"
        android:textSize="14sp"/>
</RelativeLayout>