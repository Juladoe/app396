<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ppt_lesson_tools"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:id="@+id/ppt_page_start"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/card_bg"
            android:textSize="@dimen/sys_normal"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ppt_page_total"
            android:layout_toRightOf="@id/ppt_page_start"
            android:padding="6dp"
            android:textSize="@dimen/sys_normal"
            android:text="/17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ppt_page_screen"
            android:layout_alignParentRight="true"
            android:src="@drawable/ppt_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.edusoho.plugin.photo.HackyViewPager
        android:layout_above="@id/ppt_lesson_tools"
        android:id="@+id/ppt_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
