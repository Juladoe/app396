<?xml version="1.0" encoding="utf-8"?>
<shape
    android:shape="oval" xmlns:android="http://schemas.android.com/apk/res/android" >
    <size android:width="48dp" android:height="48dp"/>
    <stroke
        android:width="1dp"
        android:color="@color/base_white_normal"
        />
    <!-- shape的颜色，支持渐变 -->
    <gradient
        android:angle="270"
        android:centerColor="@color/base_light"
        android:centerY="0.45"
        android:endColor="@color/base_light"
        android:startColor="@color/base_light" />

</shape>