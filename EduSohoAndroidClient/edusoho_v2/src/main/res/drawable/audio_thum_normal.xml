<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <!-- 是否是圆角 -->
            <corners android:radius="350dip" />

            <stroke
                android:width="3dp"
                android:color="@color/audio_thum_nomal_stroke" />

            <size

                android:height="20dp"
                android:width="20dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/audio_thum_nomal_gradient"
                android:centerY="0.45"
                android:endColor="@color/audio_thum_nomal_gradient"
                android:startColor="@color/audio_thum_nomal_gradient" />
        </shape>
    </item>
</layer-list>