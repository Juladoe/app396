<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshListWidget">
        <attr name="rlw_dividerHeight" format="dimension" />
        <attr name="rlw_dividerColor" format="color" />
        <attr name="rlw_stackFromBottom" format="boolean" />
        <attr name="rlw_transcriptMode" format="integer">
            <enum name="alwaysScroll" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="OverScrollView">
        <attr name="refreshHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="EduSohoTextBtn">
        <attr name="text" format="string" />
        <attr name="image" format="string" />
        <attr name="size" format="dimension" />
        <attr name="fontColor" format="color" />
        <attr name="iconSizeScale" format="float" />
    </declare-styleable>
    <declare-styleable name="CustomShapeImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="svg" value="3" />
        </attr>

        <attr name="svg_raw_resource" format="reference" />

    </declare-styleable>

    <declare-styleable name="CourseListWidget">
        <attr name="showMoreBtn" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CourseDetailsLabelWidget">
        <attr name="isInitHeight" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="labelTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="FancyButtonsAttrs">
        <attr name="defaultColor" format="color" />
        <attr name="textStr" format="string" />

        <attr name="textColor" format="color" />

        <attr name="textFont" format="string" />
        <attr name="iconFont" format="string" />

        <attr name="textSize" format="dimension" />
        <attr name="iconResource" format="integer" />
        <attr name="fontIconResource" format="string" />
        <attr name="fontIconSize" format="dimension" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="focusColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ListWidget">
        <attr name="emptyStr" format="string" />
        <attr name="pullMode">
            <enum name="BOTH" value="0" />
            <enum name="PULL_FROM_START" value="1" />
            <enum name="PULL_FROM_END" value="2" />
            <enum name="DISABLED" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MuiltTextView">
        <attr name="muiltTitle" format="string" />
        <attr name="muiltColor" format="color" />
        <attr name="contentColor" format="color" />
        <attr name="isFirstPadding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ChoiceRadioButton">
        <attr name="button" format="reference" />
        <attr name="btnText" format="string" />
        <attr name="btnContent" format="string" />
        <attr name="btnSize" format="dimension" />
        <attr name="btnColor" format="color" />
    </declare-styleable>
</resources>
