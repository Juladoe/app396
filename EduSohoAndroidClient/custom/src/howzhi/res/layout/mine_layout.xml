<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/myinfo_user_layout"
            android:background="@drawable/normal_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.edusoho.kuozhi.view.plugin.CircularImageView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/myinfo_logo"
                android:layout_centerVertical="true"
                android:src="@drawable/myinfo_default_face"
                android:layout_width="@dimen/head_icon_40"
                android:layout_height="@dimen/head_icon_40" />

            <TextView
                android:text="未登录"
                android:textSize="@dimen/medium_font_size"
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_black_87"
                android:layout_alignTop="@+id/myinfo_logo"
                android:layout_toRightOf="@+id/myinfo_logo" />

            <TextView
                android:text="未登录"
                android:textSize="@dimen/medium_font_size"
                android:id="@+id/tv_logout"
                android:layout_toRightOf="@id/myinfo_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerVertical="true" />

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:id="@+id/vip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_nickname"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/medium_font_size"
                android:layout_alignBaseline="@+id/tv_nickname"
                android:text="@string/font_vip"
                android:visibility="visible"
                android:textColor="@color/accent_color" />

            <TextView
                android:textColor="@color/base_black_54"
                android:text="个性签名"
                android:id="@+id/myinfo_signature"
                android:textSize="@dimen/small_font_size"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/myinfo_logo"
                android:layout_below="@+id/tv_nickname"
                android:layout_toRightOf="@+id/myinfo_logo" />

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/myinfo_data_bar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/myinfo_user_layout"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:id="@+id/myinfo_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/normal_layout_bg">

                <TextView
                    android:id="@+id/myinfo_question_num"
                    android:textSize="@dimen/medium_font_size"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="16dp" />

                <com.edusoho.kuozhi.view.ESTextView
                    android:textColor="@android:color/black"
                    app:es_alpha="0.54"
                    android:textSize="@dimen/small_font_size"
                    android:text="提问"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myinfo_discusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/normal_layout_bg">

                <TextView
                    android:id="@+id/myinfo_discusion_num"
                    android:textSize="@dimen/medium_font_size"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="16dp" />

                <com.edusoho.kuozhi.view.ESTextView
                    android:textColor="@android:color/black"
                    app:es_alpha="0.54"
                    android:textSize="@dimen/small_font_size"
                    android:text="讨论"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myinfo_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/normal_layout_bg">

                <TextView
                    android:id="@+id/myinfo_note_num"
                    android:textSize="@dimen/medium_font_size"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="16dp" />

                <com.edusoho.kuozhi.view.ESTextView
                    android:textColor="@android:color/black"
                    app:es_alpha="0.54"
                    android:textSize="@dimen/small_font_size"
                    android:text="笔记"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myInfo_testpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/normal_layout_bg">

                <TextView
                    android:id="@+id/myInfo_testpaper_num"
                    android:textSize="@dimen/medium_font_size"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="16dp" />

                <com.edusoho.kuozhi.view.ESTextView
                    android:textColor="@android:color/black"
                    app:es_alpha="0.54"
                    android:textSize="@dimen/small_font_size"
                    android:text="考试"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/course_downloaded"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/myinfo_data_bar"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="16dp">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="#31d06e"
                android:text="@string/font_download"
                android:textSize="28sp"
                android:paddingBottom="3dp" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已下载课时"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_favorite"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/course_downloaded"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="16dp">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="#fa3636"
                android:text="@string/font_collection"
                android:textSize="28sp"
                android:paddingBottom="2dp" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_notification"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/my_favorite"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="16dp">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_notification"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:paddingBottom="3dp"
                android:background="#17ceef" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/my_notification"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="16dp">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_setting"
                android:textSize="28sp"
                android:paddingBottom="3dp"
                android:background="#ffb400"
                android:textColor="@android:color/white" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/my_help"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/my_setting"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="1dp">

            <ImageView
                android:src="@drawable/my_help"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/my_help"
            android:background="@drawable/normal_layout_bg"
            android:layout_marginTop="1dp">

            <com.edusoho.kuozhi.view.EduSohoIconView
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_feedback"
                android:textSize="28sp"
                android:paddingBottom="3dp"
                android:background="#178cef"
                android:textColor="@android:color/white" />

            <com.edusoho.kuozhi.view.ESTextView
                android:textColor="@android:color/black"
                app:es_alpha="0.87"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="16sp" />
        </RelativeLayout>


    </RelativeLayout>

</ScrollView>