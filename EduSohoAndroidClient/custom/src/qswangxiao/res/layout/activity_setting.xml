<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_black_12"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/linear_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_setting_list_select"
                android:clickable="true"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/setting_scan"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/medium_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tvScan"
                    android:alpha="0.54"
                    android:text="@string/setting_scan_second"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/small_font_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/more_setting_right" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvMsgNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/more_setting_list_select"
                android:drawableRight="@drawable/more_setting_right"
                android:padding="12dp"
                android:text="@string/setting_new_msg_notify"
                android:clickable="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/tvOnlineDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/more_setting_list_select"
                android:drawableRight="@drawable/more_setting_right"
                android:padding="12dp"
                android:text="@string/setting_online_duration"
                android:clickable="true"
                android:textColor="@color/grey"
                android:visibility="gone"
                android:textSize="@dimen/medium_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/tvWifiDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:text="@string/setting_wifi_download"
                    android:clickable="false"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/medium_font_size" />

                <CheckBox
                    android:id="@+id/cb_offline_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:button="@null"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/set_check_bg" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_setting_list_select"
                android:id="@+id/rl_clear_cache"
                android:layout_marginTop="1dp">

                <com.edusoho.kuozhi.v3.view.CleanCacheTextView
                    android:id="@+id/tv_clean_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="12dp"
                    android:text="@string/setting_clean_cache"
                    android:clickable="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/medium_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:alpha="0.54"
                    android:text="12.1M"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_cache"
                    android:textSize="@dimen/small_font_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/more_setting_list_select"
                android:drawableRight="@drawable/more_setting_right"
                android:padding="12dp"
                android:text="@string/setting_about"
                android:clickable="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/medium_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white">

            <Button
                android:id="@+id/setting_logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/logout_btn_background"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="退出登录"
                android:textColor="@color/login_text"
                android:visibility="invisible"
                android:textSize="@dimen/medium_font_size" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>