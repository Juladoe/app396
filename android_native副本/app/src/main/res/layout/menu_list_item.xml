<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="8dp"
        android:id="@+id/lesson_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.edusohoapp.app.view.EduSohoIconView
            android:textColor="@color/lesson_icon"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:id="@+id/lesson_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/lesson_item_sel"
            android:layout_toRightOf="@id/lesson_type_img"
            android:padding="5dp"
            android:id="@+id/lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edusohoapp.app.view.EduSohoIconView
            android:textColor="@color/lesson_item_sel"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:id="@+id/lesson_array_right"
            android:layout_alignParentRight="true"
            android:text="@string/font_angle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>