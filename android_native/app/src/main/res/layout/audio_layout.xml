<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_layout"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="match_parent">

    <com.edusohoapp.app.view.EduSohoIconView
        android:padding="5dp"
        android:clickable="true"
        android:textSize="@dimen/audio_play_btn"
        android:text="@string/font_loading_btn"
        android:id="@+id/audio_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_margin="5dp"
        android:id="@+id/audio_progress"
        android:layout_below="@id/audio_play_btn"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:progressDrawable="@drawable/video_sk"
        android:thumb="@drawable/video_thum_sel" />

    <TextView
        android:id="@+id/audio_play_time"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/audio_progress"
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/audio_play_time"
        android:id="@+id/audio_total_time"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/audio_progress"
        android:text="/00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
