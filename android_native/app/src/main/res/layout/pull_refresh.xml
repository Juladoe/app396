<?xml version="1.0" encoding="utf-8"?>
<com.edusoho.kowzhi.view.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/net_sch_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recommend_sch_info" >

    <com.edusoho.kowzhi.view.EdusohoPullRrefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_window_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/up_refresh_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="8dp"
            android:text="下拉刷新" />

        <com.edusoho.app.view.EdusohoListView
            android:id="@+id/refresh_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dividerHeight="1px" >
        </com.edusoho.app.view.EdusohoListView>

        <TextView
            android:id="@+id/bottom_refresh_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            android:gravity="top|center_horizontal"
            android:padding="8dp"
            android:text="更多..." />

        <View
            android:id="@+id/fill_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            />
    </com.edusoho.kowzhi.view.EdusohoPullRrefreshView>

</com.edusoho.kowzhi.view.OverScrollView>