<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/qr_logo" />
    </item>
    <item>
        <shape android:shape="oval">
            <size
                android:height="99dp"
                android:width="99dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/login_qr_btn_gradinet"
                android:centerY="0.45"
                android:endColor="@color/login_qr_btn_gradinet"
                android:startColor="@color/login_qr_btn_gradinet" />
        </shape>
    </item>
</layer-list>