<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/video_sk_bg_gradient"
                android:centerY="0.45"
                android:endColor="@color/video_sk_bg_gradient"
                android:startColor="@color/video_sk_bg_gradient" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/video_sk_gradient"
                    android:centerY="0.45"
                    android:endColor="@color/video_sk_gradient"
                    android:startColor="@color/video_sk_gradient" />
            </shape>
        </clip>
    </item>
	   
</layer-list>