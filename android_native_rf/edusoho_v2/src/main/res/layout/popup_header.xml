<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textColor="@color/material_title"
        android:textSize="@dimen/material_title"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/material_content"
        android:padding="10dp"
        android:id="@+id/popup_message"
        android:textSize="@dimen/material_content"
        android:layout_below="@id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</merge>