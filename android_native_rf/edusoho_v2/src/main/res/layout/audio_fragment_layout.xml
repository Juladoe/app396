<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/audio_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/audio_playbtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/audio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="#717171"
        android:id="@+id/lesson_video_time_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:id="@+id/audio_currentTime"
            android:padding="8dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/audio_totalTime"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <SeekBar
        android:progressDrawable="@drawable/video_seekbar"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:layout_marginBottom="-8dp"
        android:layout_above="@id/lesson_video_time_layout"
        android:progress="2"
        android:layout_height="12dp"
        android:maxHeight="6dp"
        android:id="@+id/audio_progress"
        android:thumb="@drawable/video_thum_sel"
        android:layout_width="match_parent" />
</RelativeLayout>
