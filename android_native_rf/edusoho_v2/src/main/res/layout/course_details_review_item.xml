<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_userinfo"
    android:paddingBottom="13dp"
    android:paddingTop="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.edusoho.kuozhi.view.plugin.CircularImageView
        android:layout_marginRight="20dp"
        android:id="@+id/review_user_face"
        android:src="@drawable/myinfo_default_face"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/system_normal_text"
        android:textSize="@dimen/course_details_info_nickname"
        android:id="@+id/review_user_nickname"
        android:layout_toRightOf="@id/review_user_face"
        android:text="昵称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:layout_alignParentRight="true"
        android:layout_weight="0"
        android:layout_alignBottom="@id/review_user_nickname"
        android:id="@+id/review_user_rating"
        style="@style/courseRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true" />

    <TextView
        android:maxLines="2"
        android:textColor="@color/system_normal_text"
        android:textSize="@dimen/course_details_info_sign"
        android:layout_alignBottom="@id/review_user_face"
        android:id="@+id/review_user_time"
        android:layout_toRightOf="@id/review_user_face"
        android:text="评论时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_userinfo_message"
        android:textSize="@dimen/course_details_info_subtitle"
        android:layout_marginTop="8dp"
        android:textColor="@color/system_normal_text"
        android:layout_below="@id/review_user_face"
        android:text="评论内容"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>