<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/found_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/course_details_btn_layouts"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/course_details_btn_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/course_details_vip_learnbtn"
            android:gravity="center"
            android:layout_margin="9dp"
            android:textColor="@color/course_details_btn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:text="铜牌会员免费学"
            android:background="@drawable/login_btn_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/course_details_learnbtn"
            android:gravity="center"
            android:layout_margin="9dp"
            android:textColor="@color/course_details_btn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:text="立即购买"
            android:background="@drawable/logout_btn_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_above="@id/course_details_btn_layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list" />

</RelativeLayout>
