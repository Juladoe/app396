<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/found_bg"
    android:padding="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/course_details_title"
        android:textColor="@color/system_light_text"
        android:textSize="@dimen/course_details_widget"
        android:ellipsize="end"
        android:singleLine="true"
        android:padding="6dp"
        android:background="@drawable/course_details_widget_bg"
        android:text="课程目标"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/system_normal_text"
        android:textSize="@dimen/course_details_widget"
        android:text="课程目前1\n课程目标2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>