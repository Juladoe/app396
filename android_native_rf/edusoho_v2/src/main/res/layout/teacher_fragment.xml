<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/system_normal_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.edusoho.kuozhi.ui.widget.CourseDetailsTeacherWidget
            android:layout_below="@id/course_details_about"
            android:id="@+id/course_details_teacher"
            app:labelTitle="教师简介"
            android:paddingTop="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:text="相关课程"
            android:background="@drawable/course_details_widget_bg"
            android:padding="@dimen/course_details_widget_label_padding"
            android:textSize="@dimen/course_details_widget"
            android:textColor="@color/system_light_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <me.maxwin.view.XListView
            android:background="@color/system_normal_bg"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:id="@+id/course_details_teacher_course"
            android:scrollbars="none"
            android:fastScrollEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>