<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="19dp"
    android:paddingLeft="19dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/course_details_lesson_label"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/system_light_text"
        android:text="课程列表"
        android:textSize="@dimen/course_details_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.edusoho.kuozhi.view.EduSohoIconView
        android:layout_weight="0"
        android:textSize="@dimen/found_search_text_icon"
        android:textColor="@color/system_light_text"
        android:layout_gravity="right|center_vertical"
        android:text="@string/font_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>