<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:layout_gravity="center"
            android:id="@+id/lesson_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/lesson_vide_tools_layout"
            android:layout_alignParentBottom="true"
            android:background="#717171"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lesson_video_prebtn"
                android:layout_margin="8dp"
                android:src="@drawable/video_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/lesson_video_playbtn"
                android:layout_margin="8dp"
                android:src="@drawable/video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/lesson_video_nextbtn"
                android:layout_margin="8dp"
                android:src="@drawable/video_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_above="@id/lesson_vide_tools_layout"
            android:background="#717171"
            android:id="@+id/lesson_video_time_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="left"
                android:layout_weight="1"
                android:id="@+id/lesson_video_playtime"
                android:padding="8dp"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lesson_video_totaltime"
                android:gravity="right"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/lesson_video_screenbtn"
            android:layout_below="@id/lesson_video_time_layout"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/video_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:progressDrawable="@drawable/video_seekbar"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:layout_marginBottom="-8dp"
            android:layout_above="@id/lesson_video_time_layout"
            android:progress="2"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:id="@+id/lesson_video_seekbar"
            android:thumb="@drawable/video_thum_sel"
            android:layout_width="match_parent" />
    </RelativeLayout>
</RelativeLayout>
