<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/found_bg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/found_search_layout"
        android:background="@drawable/found_search_layout"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.edusoho.kuozhi.view.EduSohoIconView
            android:layout_weight="0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/found_search_text_icon"
            android:text="@string/font_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_weight="1"
            android:imeOptions="actionSearch"
            android:id="@+id/search_popwindow_edt"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textSize="@dimen/found_search_text"
            android:textColor="@color/system_normal_text"
            android:hint="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edusoho.kuozhi.view.EduSohoIconView
            android:visibility="gone"
            android:layout_weight="0"
            android:id="@+id/search_clear_btn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/found_search_text_icon"
            android:text="@string/font_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:textColor="@color/search_cancel_btn_sel"
        android:id="@+id/search_popwindow_cancel_btn"
        android:clickable="true"
        android:textSize="@dimen/search_popwindow_cancel_btn"
        android:text="取消"
        android:layout_width="66dp"
        android:layout_height="36dp" />
</LinearLayout>
