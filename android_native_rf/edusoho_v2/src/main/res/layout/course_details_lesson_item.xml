<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/course_details_lesson_chapter"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/system_light_text"
        android:textSize="@dimen/course_details_lesson_item_chapter"
        android:text="第一章"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:id="@+id/course_details_lesson_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/course_details_lesson_icon"
            android:src="@drawable/lesson_item_label_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/course_details_lesson_title"
            android:singleLine="true"
            android:layout_toRightOf="@id/course_details_lesson_icon"
            android:textColor="@color/system_normal_text"
            android:textSize="@dimen/course_details_lesson_item_title"
            android:text="课时标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_toRightOf="@id/course_details_lesson_icon"
            android:layout_below="@id/course_details_lesson_title"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/lesson_item_image"
            android:id="@+id/course_details_lesson_type"
            android:singleLine="true"
            android:textColor="@color/system_normal_text"
            android:textSize="@dimen/course_details_lesson_item_type"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
