<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="oval"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <stroke
        android:width="1px"
        android:color="@color/card_bg_stroke" />

    <size
        android:height="64dp"
        android:width="64dp" />
    <!-- shape的颜色，支持渐变 -->
    <gradient
        android:angle="270"
        android:centerColor="@color/circle_btn_normal"
        android:centerY="0.45"
        android:endColor="@color/circle_btn_normal"
        android:startColor="@color/circle_btn_normal" />
</shape>
