<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_window_bg"
    android:orientation="vertical">

    <Button
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:id="@+id/course_comment_btn"
        android:padding="10dp"
        android:textColor="@color/login_text"
        android:text="评  论"
        android:background="@drawable/login_btn_sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.edusoho.kuozhi.view.OverScrollView
        android:layout_above="@id/course_comment_btn"
        android:id="@+id/course_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.edusoho.kuozhi.view.EduSohoList
                android:orientation="vertical"
                android:id="@+id/course_comment_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.edusoho.kuozhi.view.EduSohoList>

            <include layout="@layout/course_more_btn" />
        </LinearLayout>
    </com.edusoho.kuozhi.view.OverScrollView>

    <include layout="@layout/list_empty_info" />
</RelativeLayout>