        <activity
            android:launchMode="singleTop"
            android:name="com.edusoho.plugin.photo.SchoolSplashActivity"
            android:configChanges="keyboardHidden|orientation"></activity>

        <receiver android:name="com.edusoho.kuozhi.broadcast.NetStatusReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

    <uses-sdk
        android:targetSdkVersion="8"
        android:minSdkVersion="2" />

</manifest>
