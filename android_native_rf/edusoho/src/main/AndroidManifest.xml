<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edusoho.kuozhi"
    android:versionCode="1"
    android:versionName="1.0.0"
    android:windowSoftInputMode="adjustPan">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:hardwareAccelerated="true"
        android:theme="@style/edusohoTheme">
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/startTheme"
            android:name="com.edusoho.kuozhi.ui.StartActivity"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:name="com.edusoho.kuozhi.ui.SplashActivity"
            android:configChanges="keyboardHidden|orientation"></activity>

        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.common.NetSchoolActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.common.SettingActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.course.SchoolCourseActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.course.CourseInfoActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:name=".ui.lesson.CourseLessonActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.LoginActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.RegistActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.common.AboutActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.course.FavoriteActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.NotificationActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.CourseColumnActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.course.LearningActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.AlipayActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.common.QrSchoolActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.common.SearchActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:name="com.edusoho.plugin.qr.CaptureActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.edusoho.plugin.video.EduSohoVideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity
            android:launchMode="singleTop"
            android:name="com.edusoho.plugin.photo.ViewPagerActivity"
            android:configChanges="keyboardHidden|orientation"></activity>

        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".ui.DefaultPageActivity"
            android:configChanges="keyboardHidden|orientation"></activity>

