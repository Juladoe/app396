<?xml version="1.0" encoding="utf-8"?>
<shape
    android:shape="oval"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <size
        android:height="30dp"
        android:width="30dp"></size>
    <stroke
        android:width="1px"
        android:color="@color/learn_status_stroke"

        />
    <!-- shape的颜色，支持渐变 -->
    <gradient
        android:angle="270"
        android:centerColor="@color/learn_status_gradient"
        android:centerY="0.45"
        android:endColor="@color/learn_status_gradient"
        android:startColor="@color/learn_status_gradient" />

</shape>