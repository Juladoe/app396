<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>

            <!-- 是否是圆角 -->
            <corners android:radius="5dip" />

            <stroke
                android:width="1dp"
                android:color="#87CEEB" />

            <size
                android:height="20dp"
                android:width="60dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="#87CEEB"
                android:centerY="0.45"
                android:endColor="#87CEEB"
                android:startColor="#87CEEB" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="28dp"
        android:top="1px">
        <shape>

            <!-- 是否是圆角 -->
            <corners android:radius="5dip" />

            <stroke
                android:width="1px"
                android:color="#87CEEB" />

            <size
                android:height="20dp"
                android:width="30dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="#ffffff"
                android:centerY="0.45"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
        </shape>
    </item>

</layer-list>