<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape>

            <!-- 是否是圆角 -->
            <corners android:radius="5dip" />

            <stroke
                
                android:width="1dp"
                android:color="#A6A6A6" />

            <size
                
                android:height="20dp"
                android:width="60dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="#A6A6A6"
                android:centerY="0.45"
                android:endColor="#A6A6A6"
                android:startColor="#A6A6A6" />
        </shape>
    </item>
    <item android:left="28dp"
        android:top="1px"
        android:bottom="1px"
        android:right="1px">
        <shape >

            <!-- 是否是圆角 -->
            <corners android:radius="5dip" />

            <stroke
                android:width="1px"
                android:color="#A6A6A6" />

            <size
                android:height="20dp"
                android:width="30dp" />
            <!-- shape的颜色，支持渐变 -->
            <gradient
                android:angle="270"
                android:centerColor="#ffffff"
                android:centerY="0.45"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
        </shape>
    </item>

</layer-list>