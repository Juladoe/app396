<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.howzhi">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:hardwareAccelerated="true"
        android:name="com.edusoho.kuozhi.EdusohoApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/edusohoTheme">
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/startTheme"
            android:name=".HowzhiActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".HowzhiSchoolActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".HowzhiSettingActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name=".HowzhiCourseInfoActivity"
            android:configChanges="keyboardHidden|orientation"></activity>

        <activity
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:name=".HowzhiSplashActivity"
            android:configChanges="keyboardHidden|orientation"></activity>
    </application>

    <uses-sdk
        android:targetSdkVersion="8"
        android:minSdkVersion="2" />
</manifest>
